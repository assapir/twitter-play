{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "extends": "eslint:recommended",
    "rules": {
        "eqeqeq": [
            "error",
            "allow-null"
        ],
        "curly": [
            "error",
            "multi"
        ],
        "no-console": [
            "off"
        ],
        "strict": [
            "error"
        ],
        "dot-notation": [
            "error",
            {
                "allowKeywords": true
            }
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}